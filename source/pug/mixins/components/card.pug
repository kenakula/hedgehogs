mixin card(data)
  - const {title, text, price, tooltip, img, hasDiscount, discount} = data;

  .swiper-slide.card&attributes(attributes)
    .card__inner
      h3.card__title !{title}
      p.card__text !{text}
      .card__prices
        if hasDiscount
          .card__old-price !{price.old}
            span ₽
        .card__current-price !{price.current}
          span ₽
    .card__img
      +img(img)
    span.card__discount !{discount} %
    .card__tooltip
      button(type="button")
        +icon('icon-info', 37, 37)
      .card__tooltip-content
        p !{tooltip}
    .card__button
      button(type="button")
        +icon('icon-plus', 40, 40)
